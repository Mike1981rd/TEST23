<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row g-6">

        @* Render el menu interno *@
        @Html.Partial("InternalMenu.cshtml", 7)

        <!-- Options -->
        <div class="col-12 col-lg-8 pt-6 pt-lg-0">
            <div class="page-header">
                <div class="page-title">
                    <h4>@ViewLocalizer["Tax Rates"]</h4>
                    <h6>@ViewLocalizer["Manage Tax Rates"]</h6>
                </div>
                <div class="page-btn">
                    <a id="add-tax" class="btn btn-added"><img src="~/vendor/img/icons/plus.svg" alt="img" class="me-1">@ViewLocalizer["Add New Tax Rates"]</a>
                </div>
            </div>
            <!-- /product list -->
            <div class="card">
                <div class="card-body">

                    <div class="table-responsive">
                        <table id="tax-list" class="table">
                            <thead>
                                <tr>
                                    <th>@ViewLocalizer["Action"]</th>
                                    <th>@ViewLocalizer["Tax Name"]</th>
                                    <th>@ViewLocalizer["Tax (%)"]</th>
                                    <th>@ViewLocalizer["To go exclude"]</th>
                                    <th>@ViewLocalizer["Barcode exclude"]</th>
                                    <th>@ViewLocalizer["Status"]</th>

                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

            <!-- edit Modal -->
            <div class="modal fade" id="edittax" tabindex="-1" role="dialog" aria-hidden="true" data-id="">
                <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="tax-modal-title">@ViewLocalizer["Edit Tax"]</h5>
                            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>@ViewLocalizer["Tax Name"]<span class="manitory">*</span></label>
                                        <input id="etax-name" type="text" value="SGST 4.5%	" required>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>@ViewLocalizer["Tax (%)"]<span class="manitory">*</span></label>
                                        <input id="etax-value" type="text" value="4.50" required>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group row">
                                        <input id="etax-article" type="checkbox" class="col-sm-4 col-4">
                                        <label class="col-sm-8 col-8">@ViewLocalizer["Article"]  </label>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group row">
                                        <input id="etax-shipping" type="checkbox" class="col-sm-4 col-4">
                                        <label class="col-sm-8 col-8">@ViewLocalizer["Sales"]  </label>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-6 col-12">
                                    <div class="form-group row">
                                        <input id="etax-togo" type="checkbox" class="col-sm-4 col-4">
                                        <label class="col-sm-8 col-8">@ViewLocalizer["To go exclude"]  </label>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-6 col-12">
                                    <div class="form-group row">
                                        <input id="etax-barcode" type="checkbox" class="col-sm-4 col-4">
                                        <label class="col-sm-8 col-8">@ViewLocalizer["Barcode exclude"]  </label>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-6 col-12">
                                    <div class="form-group row">
                                        <input id="etax-kiosk" type="checkbox" class="col-sm-4 col-4">
                                        <label class="col-sm-8 col-8">@ViewLocalizer["Kiosk exclude"]  </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group mb-0">
                                        <label>@ViewLocalizer["Status"]</label>
                                        <select id="etax-status" class="select">
                                            <option value="1"> @ViewLocalizer["Active"]</option>
                                            <option value="0"> @ViewLocalizer["InActive"]</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row pt-5">
                                <div class="col-lg-12 col-sm-12 col-12">
                                    <div class="d-flex  align-items-center pb-4" style="gap: 5px;">
                                        <h6 class="text-left"> @ViewLocalizer["Accounting"]</h6>
                                        <div class="add-unit">
                                            <a class="add-accounting-item" href="javascript:void(0);">
                                                <img src="/vendor/img/icons/plus1.svg" alt="img">
                                            </a>
                                        </div>
                                    </div>
                                    <table class="table reordertable">
                                        <thead>
                                            <tr>
                                                <td>
                                                    @ViewLocalizer["Name"]
                                                </td>
                                                <td>
                                                    @ViewLocalizer["Type"]
                                                </td>
                                                <td>
                                                    @ViewLocalizer["Number"]
                                                </td>
                                                <td>
                                                    @ViewLocalizer["Action"]
                                                </td>
                                        </thead>
                                        <tbody id="accounting-list">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="edit-tax" type="button" class="btn btn-submit">@ViewLocalizer["Submit"]</button>
                            <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">@ViewLocalizer["Cancel"]</button>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            </div>
            </div>


@{
    @await Component.InvokeAsync("Accounting", new { })
}

<script>

    var taxtable = $("#tax-list").DataTable({
        "processing": true, // for show progress bar
        "serverSide": true, // for process server side
        "filter": true, // this is for disable filter (search box)
        "orderMulti": false, // for disable multiple column at once
        "ajax": {
            "url": "/Setting/GetTaxList",
            "type": "POST",
            "datatype": "json"
        },
        'select': {
            'style': 'multi'
        },
        "pageLength": 10,
        "lengthMenu": [10, 25, 50],
        "order": [[1, 'asc']],
        "columns": [
            {
                'data': 'action', 'name': 'action',
                render: function (data, type, row) {
                    return "<a class='me-3' href='javascript:void(0);' onclick='EditTax(" + JSON.stringify(row) + ")'><img src='/vendor/img/icons/edit.svg' alt='img'></a>";
                },
            },
            { "data": "taxName", "name": "taxName", "autoWidth": true },
            { "data": "taxValue", "name": "taxValue", "autoWidth": true },
            { "data": "isToGoExclude", "name": "isToGoExclude", "autoWidth": true },
            { "data": "isBarcodeExclude", "name": "isBarcodeExclude", "autoWidth": true },
            {
                'data': 'status', 'name': 'isActive',
                render: function (data, type, row) {
                    if (row.isActive) {
                        return "<span class='badges bg-lightgreen'>@ViewLocalizer["Active"]</span>";
                    }
                    else {
                        return "<span class='badges bg-lightred'>@ViewLocalizer["InActive"]</span>";
                    }
                },
                "autoWidth": true
            },
         
        ]
    });

    $("#add-tax").click(function () {
        AddTax();
    });

    function AddTax() {
        $("#etax-name").val("");
        $("#etax-value").val("");
        $("#etax-status").val(1).change();
        $("#edittax").data("id", 0);
        GetAccountItems(6, 0)
        $(".tax-modal-title").html("@ViewLocalizer["Add Tax"]");
        $("#edittax").modal("show");
    }

    function EditTax(tax) {
        $("#etax-name").val(tax.taxName);
        $("#etax-value").val(tax.taxValue);
        if (tax.isActive) {
            $("#etax-status").val(1).change();
        }
        else {
            $("#etax-status").val(0).change();
        }
        if (tax.isInPurchaseOrder) {
            $("#etax-porder").prop("checked", true);
        }
        else{
            $("#etax-porder").prop("checked", false);
        }
        if (tax.isInArticle) {
            $("#etax-article").prop("checked", true);
        }
        else{
            $("#etax-article").prop("checked", false);
        }
        if (tax.isShipping) {
            $("#etax-shipping").prop("checked", true);
        }
        else{
            $("#etax-shipping").prop("checked", false);
        } 
        if (tax.isToGoExclude) {
            $("#etax-togo").prop("checked", true);
        }
        else{
            $("#etax-togo").prop("checked", false);
        }
        if (tax.isBarcodeExclude) {
            $("#etax-barcode").prop("checked", true);
        }
        else {
            $("#etax-barcode").prop("checked", false);
        } 
        if (tax.isKioskExclude) {
            $("#etax-kiosk").prop("checked", true);
        }
        else {
            $("#etax-kiosk").prop("checked", false);
        }
        $(".tax-modal-title").html("@ViewLocalizer["Edit Tax"]");
        GetAccountItems(6, tax.id)
        $("#edittax").data("id", tax.id);
        $("#edittax").modal("show");
    }

    $("#edit-tax").click(function () {
        var taxName = $("#etax-name").val();
        if (!taxName || taxName == "") {
            toastr.warning("@ViewLocalizer["Please input the tax name."]", { showMethod: "fadeIn", hideMethod: "fadeOut", timeOut: 2e3 })
            return;
        }
        var taxvalue = parseFloat($("#etax-value").val());
        if (!taxvalue) taxvalue == 0;
        var active = $("#etax-status").val()
        var data = {
            ID: $("#edittax").data("id"),
            TaxName: taxName,
            IsInPurchaseOrder: $("#etax-porder").prop("checked"),
            IsInArticle: $("#etax-article").prop("checked"),
            IsShipping: $("#etax-shipping").prop("checked"),
            IsToGoExclude: $("#etax-togo").prop("checked"),
            IsBarcodeExclude: $("#etax-barcode").prop("checked"),
            IsKioskExclude: $("#etax-kiosk").prop("checked"),
            TaxValue: taxvalue,
            IsActive: active == "1"
        }

        $.ajax({
            url: "/Setting/EditTax",
            type: "POST",
            data: data,
            success: function (data, textStatus, jqXHR) {
                if (data.status == 0) {
                    SaveAccountItems(6, data.id, function () {
                        taxtable.draw();
                        $("#edittax").modal("hide");
                    })
                    
                }
                else if (data.status == 2) {
                    toastr.error("@ViewLocalizer["The tax name should be unique."]", {})
                }
                else {
                    toastr.error("@ViewLocalizer["There was an error in processing the request."]", {})
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                toastr.error("@ViewLocalizer["There was an error in processing the request."]", {})
            }
        });
    });

    function DeleteTax(id) {

        Swal.fire({
            title: "@ViewLocalizer["Are you sure to delete the tax?"]",
            text: "",
            type: "warning",
            showCancelButton: !0,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "@ViewLocalizer["Yes, delete it!"]",
            cancelButtonText: "@ViewLocalizer["Cancel"]",
            confirmButtonClass: "btn btn-primary",
            cancelButtonClass: "btn btn-danger ml-1",
            buttonsStyling: !1,
        }).then(function (t) {
            if (t.value) {
                $.ajax({
                    url: "/Setting/DeleteTax?taxId=" + id,
                    type: "POST",
                    success: function (data, textStatus, jqXHR) {
                        if (data.status == 0) {
                            taxtable.draw();
                        }
                        else {
                            toastr.error("@ViewLocalizer["Failed to delete the tax."]", {})
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        toastr.error("@ViewLocalizer["There was an error in processing the request."]", {})
                    }
                });
            }

        });

    }



</script>